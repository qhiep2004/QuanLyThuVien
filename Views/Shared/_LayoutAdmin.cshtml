<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuanLyThuVien</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QuanLyThuVien.styles.css" asp-append-version="true" />
    <style>
   
        .navbar {
            background-color: #003366;
       
            padding: 10px;
        }

        .logo {
            height: 80px;
            width: auto;
        }

        .navbar .navbar-brand {
            color: #ffffff;
            font-weight: bold;
            font-size: 24px;
            text-decoration: none;
        }

    
        .navbar .navbar-nav .nav-link {
            color: #ffffff;
      
            font-weight: 500;
            font-size: 18px;
            padding: 10px 15px;
            text-transform: uppercase;
        }

       
        .navbar .navbar-nav .nav-link:hover {
            background-color: #0056b3;
       
            color: #ffffff;
       
            border-radius: 5px;
            text-decoration: none;
        }

      
        .navbar .navbar-brand:hover {
            color: #ffffff;
     
            text-decoration: none;
        }

      
        .dropdown-menu {
            background-color: #003366;
        }

        .dropdown-item {
            color: #ffffff;
            font-size: 16px;
        }

        .dropdown-item:hover {
            background-color: #0056b3;
            color: #ffffff;
        }

        footer {

            background-color: #003366 !important;
            color: #fff !important;
            padding: 20px !important;
        }
        .logosach {
    position: relative;
    display: inline-block;
}

.logo1 {
    width: 50px; 
    height: auto;
}

#cart-count {
    position: absolute;
    top: -5px;
    right: -5px;
    background-color: red;
    color: white;
    font-size: 14px;
    font-weight: bold;
    border-radius: 50%;
    width: 20px;
    height: 20px;
    text-align: center;
    line-height: 20px;
    @* display: none; /* Ẩn số 0 ban đầu */ *@
}

        .logo{
            margin-right: 10px;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light">
            <div class="container-fluid">
                <img class="logo" src="~/img/Logo.png" alt=""  > 
                <a class="navbar-brand" asp-area="">Thư Viện<br>Đại Học Mở Hà Nội</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @* <ul class="navbar-nav flex-grow-1"> *@

                        @* <!-- Giới Thiệu menu -->
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"> Trang Chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy"> Giới Thiệu</a>
                        </li>
                        <!-- Menu Danh Mục -->
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="TaiLieu" asp-action="Index">
                                Danh Mục </a> *@
                        @* </li>
                    </ul> *@
@* <div class="logosach">
   
        <img class="logo1" src="~/img/shopping-cart.png" alt="Giỏ sách">
        <span id="cart-count">0</span> <!-- Hiển thị số lượng -->
    
</div> *@
 @* <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "GioSach")">
                                <img class="logo1" src="~/img/shopping-cart.png" alt="Giỏ sách">
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "PhieuMuon")">
                            <img class="logo1" src="~/img/phieumuon.png" alt="Phiếu Mượn">
                        </a>
                        </li>
                    </ul> *@



                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>






    @await RenderSectionAsync("Scripts", required: false)



</body>

</html>
