@model QuanLyThuVien.ViewModels.TaiKhoanNguoiDungViewModel

@{
    ViewData["Title"] = "Sửa tài khoản và người dùng";
}

<h2>Sửa tài khoản và người dùng</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label for="MaTaiKhoan">Mã Tài Khoản</label>
        <input type="text" class="form-control" id="MaTaiKhoan" name="MaTaiKhoan" value="@Model.MaTaiKhoan" readonly />
    </div>
    <div class="form-group">
        <label for="TenDangNhap">Tên Đăng Nhập</label>
        <input type="text" class="form-control" id="TenDangNhap" name="TenDangNhap" value="@Model.TenDangNhap" required />
    </div>
    <div class="form-group">
        <label for="MatKhau">Mật Khẩu</label>
        <input type="password" class="form-control" id="MatKhau" name="MatKhau" value="@Model.MatKhau" required />
    </div>
    <div class="form-group">
        <label for="MaNguoiDung">Mã Người Dùng</label>
        <input type="text" class="form-control" id="MaNguoiDung" name="MaNguoiDung" value="@Model.MaNguoiDung" readonly />
    </div>
    <div class="form-group">
        <label for="HoTen">Họ Tên</label>
        <input type="text" class="form-control" id="HoTen" name="HoTen" value="@Model.HoTen" required />
    </div>
    <div class="form-group">
        <label for="SDT">SĐT</label>
        <input type="text" class="form-control" id="SDT" name="SDT" value="@Model.SDT" />
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" />
    </div>
    <div class="form-group">
        <label for="LoaiNguoiDung">Loại Người Dùng</label>
        <input type="text" class="form-control" id="LoaiNguoiDung" name="LoaiNguoiDung" value="@Model.LoaiNguoiDung" required />
    </div>
    <button type="submit" class="btn btn-primary">Lưu</button>
    <a href="@Url.Action("Index", "TaiKhoan")" class="btn btn-secondary">Hủy</a>
</form>