@model IEnumerable<QuanLyThuVien.ViewModels.TaiKhoanNguoiDungViewModel>

@{
    ViewData["Title"] = "Danh sách người dùng và tài khoản";
}

<h2>Danh sách người dùng và tài khoản</h2>

<table class="table">
    <thead>
        <tr>
            <th>Mã Tài Khoản</th>
               <th>Mã Người Dùng</th>
            <th>Tên Đăng Nhập</th>
              <th>Mật Khẩu</th>
         
            <th>Họ Tên</th>
            <th>SĐT</th>
            <th>Email</th>
            <th>Loại Người Dùng</th>
          
            <th>Thao Tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaTaiKhoan</td>
                  <td>@item.MaNguoiDung</td>
                <td>@item.TenDangNhap</td>
                <td>@item.MatKhau</td>
              
                <td>@item.HoTen</td>
                <td>@item.SDT</td>
                <td>@item.Email</td>
                <td>@item.LoaiNguoiDung</td>
                
                <td>
                    <a href="@Url.Action("Edit", "TaiKhoan", new { id = item.MaTaiKhoan })" class="btn btn-primary">Sửa</a>
                       <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@item.MaTaiKhoan" />
                        <button type="submit" class="btn btn-danger">Xóa</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "TaiKhoan")" class="btn btn-success">Thêm Tài Khoản</a>